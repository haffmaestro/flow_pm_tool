  <%= render partial: 'side_nav', locales: { search_params: @search_params, project: @projects } %>

  <div class="col-md-6 col-sm-6">
    <h2><%=@project.title %></h2>
    <h6>Due Date: <%=@project.due_date %></h6>
    <p><%= @project.description %></p>
    <div class="btn-group">
    <%= link_to "Edit", edit_project_path(@project), class:"btn btn-default" %>
      <%= link_to "Delete", project_path(@project), method: :delete, class:"btn btn-default" %>
      <%= link_to "Discussions", project_discussions_path(@project), class:"btn btn-default" %>
    </div>

    <%= form_for [@project, @task] do |f| %>
    <br>
    <br>
    <label for="">New Task</label>
    <div class="form-group">
      <%= f.text_field :title, class: "form-control"%>
    </div>
    <div class="form-group">
      <label for=":description">Due Date</label>
      <%= f.date_field :due_date, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.submit "#{@task.persisted? ? "Update" : "Create"}", class: "form-control"%>
    </div>

    <% end %>


    <h3>Project Tasks</h3>
    <ul class="list-group">
      <%@project.tasks.each do |task| %>
      <div class="well">
        <p>
          <%= link_to fa_icon('trash'), project_task_path(@project.id, task.id), method: "delete" %>
          <%= link_to task.title, task %>
          <p>
          <h6>Due at: <%= task.due_date %></h6>
          </div>
          <% end %>
        </ul>

      </div>
    </div>