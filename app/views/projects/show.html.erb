<div class="row">
  <div class="col-md-2 col-sm-0"></div>
  <div class="col-md-8 col-sm-12">
    <h2><%=@project.title %></h2>
    <h6>Due Date: <%=@project.due_date %></h6>
    <p><%= @project.description %></p>
    <%= link_to "Edit", edit_project_path, class:"btn btn-default" %>
    <%= link_to "Delete", project_path(@project), method: :delete, class:"btn btn-default" %>
  </div>
  <div class="col-md-2 col-sm-0"></div>
</div>
<div class="row">
  <div class="col-md-2 col-sm-0"></div>
  <div class="col-md-8 col-sm-12">
    <h3>Project Tasks</h3>
    <ul class="list-group">
    <%@tasks.each do |task| %>
    <li class="list-group-item"><%= link_to task.title, task %></li>
    <% end %>
    </ul>

  </div>
  <div class="col-md-2 col-sm-0"></div>
</div>