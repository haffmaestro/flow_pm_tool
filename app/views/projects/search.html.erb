<div class="row">
  <div class="col-md-2 col-sm-0"></div>
  <div class="col-md-5 col-sm-12">
  <%= link_to "New Project", new_project_path, class: "btn btn-default" %>
  </div>
  <div class="col-md-4">
    <%= form_tag(projects_search_path, method: "get", class: "form-group form-inline") do %>
    <%= text_field_tag("search", params[:search], class: "form-control") %>
    <%= submit_tag(value='Search', class: "btn btn-default") %>
    <% end %>
  </div>
  <div class="col-md-2 col-sm-0"></div>
</div>
<div class="row">
  <div class="col-md-2 col-sm-0"></div>
  <div class="col-md-8 col-sm-12">
    <h2>Current Projects</h2>
    <hr>
    <% @projects.each do |project| %>
    <h3><%= link_to project.title, project %></h3>
    <p><%= project.description %></p>
    <hr>
    <%end %>
  </div>
  <div class="col-md-2 col-sm-0"></div>
  <div class="row">
    <div class="col-md-4 col-sm-0"></div>
    <div class="col-md-4 col-sm-12">
      <%= will_paginate @locations %>
    </div>
    <div class="col-md-4 col-sm-0"></div>
  </div>
</div>