  h2 Discussions
  = render partial: 'form'
  h2 Current Discussions
  .well
    -@discussions.each do |discussion|
      = link_to fa_icon('trash'), project_discussion_path(@project.id, discussion.id), method: "delete"
      |  
      =link_to discussion.title, project_discussion_path(@project.id, discussion.id)
      -if discussion.description
        h6= discussion.description
      hr

